@model EmployeeCreateViewModel
   
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label asp-for="EmpId"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="EmpId" class="form-control" placeholder="EMP000" />
                            <span asp-validation-for="EmpId" class="text-danger"></span>
                        </div>
                        <div class="col-md-2"></div>
                      
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label asp-for="FirstName"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name.." />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <input asp-for="MiddleName" class="form-control" placeholder="Enter Middle Name.." />
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="LastName"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label asp-for="NSN"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="NSN" class="form-control" placeholder="Enter NSN number.." />
                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-2">
                            <label asp-for="Email"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="Email" class="form-control" />
                        </div>
                    </div>
                 
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label asp-for="Designation"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="Designation" class="form-control" placeholder="Enter Role..." />
                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-1">
                            <label asp-for="ImageUrl"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="btn btn-primary btn-icon-text">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <input asp-for="ImageUrl" type="file" value="Upload" />
                            </div>
                        </div>
                    </div>
                 

                    <div class="form-group">

                        <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                        <a asp-page="_payEmpInfoPartial" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-right" style="margin-right:0.7em"></i>Next</a>
                        <br />
                        <br />
                        <br />

                    </div>
                </form>
   